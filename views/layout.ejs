<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>CRM System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <div class="d-flex">

    <% if (user) { %>
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="sidebar-header">CRM</div>
      <ul class="sidebar-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li class="has-submenu">
          <a href="#">Customer</a>
          <ul class="submenu">
            <li><a href="/customers/manage">Manage Customer</a></li>
            <li><a href="/customers/add">Add Customer</a></li>
            <li><a href="/customers/import-export">Import/Export</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Deposit</a>
          <ul class="submenu">
            <li><a href="/deposit/manage">Manage Deposit</a></li>
            <li><a href="/deposit/add">Add Deposit</a></li>
            <li><a href="/deposit/send-bonus">Send Bonus</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Withdrawal</a>
          <ul class="submenu">
            <li><a href="/withdrawal/manage">Manage Withdrawal</a></li>
            <li><a href="/withdrawal/add">Add Withdrawal</a></li>
            <li><a href="/withdrawal/transfer">Add Transfer</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Game</a>
          <ul class="submenu">
            <li><a href="/game/manage">Manage Game Account</a></li>
            <li><a href="/game/add">Add Game Account</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Setting</a>
          <ul class="submenu">
            <li><a href="/setting/manage-user">Manage User</a></li>
            <li><a href="/setting/manage-bank">Manage Bank</a></li>
            <li><a href="/setting/manage-adjust">Manage Adjust</a></li>
            <li><a href="/setting/manage-short">Manage Short</a></li>
            <li><a href="/setting/manage-payout">Manage Payout</a></li>
            <li><a href="/setting/password-logs">Password Logs</a></li>
          </ul>
        </li>
      </ul>
    </div>
    <% } %>

    <!-- Main Content -->
    <div class="main-content flex-grow-1">

      <% if (user) { %>
      <!-- Topbar -->
      <div class="topbar d-flex justify-content-between align-items-center p-2">
        <div class="left-buttons d-flex">
          <button class="btn btn-primary me-2">Start Shift</button>
          <button class="btn btn-secondary me-2">Popup Message</button>
          <button class="btn btn-success me-2">Agent Player</button>
          <button class="btn btn-warning me-2">Withdraw Times</button>
        </div>
        <div class="user-info d-flex align-items-center">
          <span class="me-2">Hi, <%= user.username %></span>
          <div class="dropdown">
            <div class="circle-letter dropdown-toggle" data-bs-toggle="dropdown">
              <%= user.username.charAt(0).toUpperCase() %>
            </div>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/edit-user">Edit User</a></li>
              <li><a class="dropdown-item" href="/change-password">Change Password</a></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Page Body -->
      <div class="p-4">
        <%- body %>
      </div>
    </div>
  </div>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    document.querySelectorAll('.has-submenu > a').forEach(el => {
      el.addEventListener('click', e => {
        e.preventDefault();
        el.parentElement.classList.toggle('open');
      });
    });
  </script>
</body>
</html>
