<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>CRM System</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
</head>
<body>
  <% if (user) { %>
  <!-- 登录后的页面：sidebar + topbar -->
  <div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="sidebar-header">CRM</div>
      <ul class="sidebar-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li class="has-submenu">
          <a href="#">Customer</a>
          <ul class="submenu">
            <li><a href="/customers/manage">Manage Customer</a></li>
            <li><a href="/customers/add">Add Customer</a></li>
            <li><a href="/customers/import-export">Import/Export</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Deposit</a>
          <ul class="submenu">
            <li><a href="/deposit/manage">Manage Deposit</a></li>
            <li><a href="/deposit/add">Add Deposit</a></li>
            <li><a href="/deposit/send-bonus">Send Bonus</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Withdrawal</a>
          <ul class="submenu">
            <li><a href="/withdrawal/manage">Manage Withdrawal</a></li>
            <li><a href="/withdrawal/add">Add Withdrawal</a></li>
            <li><a href="/withdrawal/transfer">Add Transfer</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Game</a>
          <ul class="submenu">
            <li><a href="/game/manage">Manage Game Account</a></li>
            <li><a href="/game/add">Add Game Account</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Setting</a>
          <ul class="submenu">
            <li><a href="/setting/manage-user">Manage User</a></li>
            <li><a href="/setting/manage-bank">Manage Bank</a></li>
            <li><a href="/setting/manage-adjust">Manage Adjust</a></li>
            <li><a href="/setting/manage-short">Manage Short</a></li>
            <li><a href="/setting/manage-payout">Manage Payout</a></li>
            <li><a href="/setting/password-logs">Password Logs</a></li>
          </ul>
        </li>
      </ul>
    </div>

    <!-- Content -->
    <div class="main-content">
      <!-- Topbar -->
      <div class="topbar d-flex justify-content-between align-items-center p-2">
        <div>
          <button class="btn btn-primary btn-sm">Start Shift</button>
          <button class="btn btn-secondary btn-sm">Popup Message</button>
          <button class="btn btn-success btn-sm">Agent Player</button>
          <button class="btn btn-warning btn-sm">Withdraw Times</button>
        </div>
        <div class="d-flex align-items-center gap-2">
          <span>Hi, <%= user.username %></span>
          <a href="/edit-user" class="btn btn-sm btn-outline-dark rounded-circle"><%= user.username.charAt(0).toUpperCase() %></a>
        </div>
      </div>

      <!-- Main Page -->
      <div class="page-content p-3">
        <%- body %>
      </div>
    </div>
  </div>

  <% } else { %>
  <!-- 登录页面只显示登录框 -->
  <div class="login-wrapper">
    <%- body %>
  </div>
  <% } %>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    $(document).ready(function () {
      $('.datatable').DataTable();
    });
  </script>
</body>
</html>
