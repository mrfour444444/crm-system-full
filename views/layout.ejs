<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CRM System</title>

  <!-- 样式 -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
  <div class="d-flex">

    <% if (user) { %>
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="sidebar-header">CRM</div>
      <ul class="sidebar-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li class="has-submenu">
          <a href="#">Customer</a>
          <ul class="submenu">
            <li><a href="/customers/manage">Manage Customer</a></li>
            <li><a href="/customers/add">Add Customer</a></li>
            <li><a href="/customers/import-export">Import/Export</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Deposit</a>
          <ul class="submenu">
            <li><a href="/deposit/manage">Manage Deposit</a></li>
            <li><a href="/deposit/add">Add Deposit</a></li>
            <li><a href="/deposit/send-bonus">Send Bonus</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Withdrawal</a>
          <ul class="submenu">
            <li><a href="/withdrawal/manage">Manage Withdrawal</a></li>
            <li><a href="/withdrawal/add">Add Withdrawal</a></li>
            <li><a href="/withdrawal/transfer">Add Transfer</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Game</a>
          <ul class="submenu">
            <li><a href="/game/manage">Manage Game Account</a></li>
            <li><a href="/game/add">Add Game Account</a></li>
          </ul>
        </li>
        <li class="has-submenu">
          <a href="#">Setting</a>
          <ul class="submenu">
            <li><a href="/setting/manage-user">Manage User</a></li>
            <li><a href="/setting/manage-bank">Manage Bank</a></li>
            <li><a href="/setting/manage-adjust">Manage Adjust</a></li>
            <li><a href="/setting/manage-short">Manage Short</a></li>
            <li><a href="/setting/manage-payout">Manage Payout</a></li>
            <li><a href="/setting/password-logs">Password Logs</a></li>
          </ul>
        </li>
      </ul>
    </div>
    <% } %>


    <!-- Main Content -->
    <div class="main-content flex-grow-1">
      <!-- Topbar -->
      <div class="topbar d-flex justify-content-between align-items-center px-3 py-2 shadow-sm">
        <div class="topbar-left">
          <button class="btn btn-sm btn-primary me-2">Start Shift</button>
          <button class="btn btn-sm btn-secondary me-2">Popup Message</button>
          <button class="btn btn-sm btn-success me-2">Agent Player</button>
          <button class="btn btn-sm btn-warning">Withdraw Times</button>
        </div>
        <div class="topbar-right d-flex align-items-center">
          <span class="me-2">Hi, <%= user ? user.username : 'Guest' %></span>
          <div class="avatar-circle" onclick="toggleLogout()">
            <%= typeof user !== 'undefined' && user.username ? user.username.charAt(0).toUpperCase() : 'U' %>

          </div>
          <div id="logoutDropdown" class="logout-dropdown">
            <a href="/edit-user">Edit Profile</a>
            <a href="/logout">Logout</a>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="container-fluid mt-3">
        <%- body %>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

  <script>
    // 展开子菜单
    document.querySelectorAll('.has-submenu > a').forEach(menu => {
      menu.addEventListener('click', function (e) {
        e.preventDefault();
        this.parentElement.classList.toggle('open');
      });
    });

    function toggleLogout() {
      document.getElementById("logoutDropdown").classList.toggle("show");
    }

    window.onclick = function (event) {
      if (!event.target.classList.contains("avatar-circle")) {
        const dropdown = document.getElementById("logoutDropdown");
        if (dropdown.classList.contains("show")) {
          dropdown.classList.remove("show");
        }
      }
    };
  </script>
</body>
</html>
