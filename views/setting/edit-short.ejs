<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Shortcut</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div id="wrapper">
    <!-- Sidebar -->
    <div class="bg-light border-end" id="sidebar-wrapper">
      <div class="sidebar-heading px-3 py-4">CRM SYSTEM</div>
      <div class="list-group list-group-flush">
        <a href="/dashboard" class="list-group-item list-group-item-action">Dashboard</a>
        <a href="/deposit/manage-deposit" class="list-group-item list-group-item-action">Deposit</a>
        <a href="/withdrawal/manage-withdrawal" class="list-group-item list-group-item-action">Withdrawal</a>
        <a href="/game/manage-game-account" class="list-group-item list-group-item-action">Game Account</a>
        <a href="/customers/manage-customers" class="list-group-item list-group-item-action">Customer</a>
        <a href="/setting/manage-short" class="list-group-item list-group-item-action active">Setting</a>
      </div>
    </div>

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <!-- Topbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-4">
        <div class="ms-auto d-flex align-items-center">
          <span class="me-3">Hi, <%= user.username %></span>
          <a href="/edit-user" class="btn btn-outline-secondary btn-sm me-2">Edit Profile</a>
          <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
        </div>
      </nav>

      <div class="container-fluid px-4 mt-4">
        <h4 class="mb-4">Edit Shortcut</h4>

        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (typeof success !== 'undefined') { %>
          <div class="alert alert-success"><%= success %></div>
        <% } %>

        <form action="/setting/edit-short" method="POST" class="card p-4 shadow-sm bg-light">
          <input type="hidden" name="id" value="<%= shortcut.id %>">

          <div class="mb-3">
            <label class="form-label">Shortcut Name</label>
            <input type="text" name="shortcut_name" class="form-control" required value="<%= shortcut.shortcut_name %>">
          </div>

          <div class="mb-3">
            <label class="form-label">Target URL</label>
            <input type="text" name="target_url" class="form-control" required value="<%= shortcut.target_url %>">
          </div>

          <div class="mb-3">
            <label class="form-label">Icon (optional)</label>
            <input type="text" name="icon" class="form-control" value="<%= shortcut.icon %>">
          </div>

          <button type="submit" class="btn btn-primary">Update</button>
          <a href="/setting/manage-short" class="btn btn-secondary ms-2">Back</a>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
