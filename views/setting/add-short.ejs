<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Shortcut</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
</head>
<body>
  <div id="wrapper">
    <!-- Sidebar -->
    <div class="bg-light border-end" id="sidebar-wrapper">
      <div class="sidebar-heading px-3 py-4">CRM SYSTEM</div>
      <div class="list-group list-group-flush">
        <a href="/dashboard" class="list-group-item list-group-item-action">Dashboard</a>
        <a href="/deposit/manage-deposit" class="list-group-item list-group-item-action">Deposit</a>
        <a href="/withdrawal/manage-withdrawal" class="list-group-item list-group-item-action">Withdrawal</a>
        <a href="/game/manage-game-account" class="list-group-item list-group-item-action">Game Account</a>
        <a href="/customers/manage-customers" class="list-group-item list-group-item-action">Customer</a>
        <a href="/setting/manage-user" class="list-group-item list-group-item-action active">Setting</a>
      </div>
    </div>

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <!-- Topbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-4">
        <div class="ms-auto d-flex align-items-center">
          <span class="me-3">Hi, <%= user.username %></span>
          <a href="/edit-user" class="btn btn-outline-secondary btn-sm me-2">Edit Profile</a>
          <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
        </div>
      </nav>

      <div class="container-fluid px-4 mt-4">
        <h4 class="mb-4">Add Shortcut</h4>

        <% if (typeof msg !== 'undefined') { %>
          <div class="alert alert-info"><%= msg %></div>
        <% } %>

        <form action="/setting/add-short" method="POST" class="card p-4 shadow-sm bg-light">
          <div class="mb-3">
            <label for="short_code" class="form-label">Shortcut Code</label>
            <input type="text" name="short_code" id="short_code" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="full_text" class="form-label">Full Text</label>
            <textarea name="full_text" id="full_text" class="form-control" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/setting/manage-short" class="btn btn-secondary ms-2">Back</a>
        </form>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
