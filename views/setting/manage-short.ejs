<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Manage Short Codes</title>
  <link rel="stylesheet" href="/css/style.css"/>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css"/>
</head>
<body>
  <div class="wrapper">
    <div class="sidebar">
      <%- include('../partials/sidebar') %>
    </div>

    <div class="main-content">
      <%- include('../partials/topbar') %>

      <div class="container-fluid px-4">
        <h4 class="my-4">Manage Short Codes</h4>

        <div class="mb-3">
          <a href="/setting/add-short" class="btn btn-primary">Add Short Code</a>
        </div>

        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="dataTable">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (Array.isArray(shorts) && shorts.length > 0) { %>
                <% shorts.forEach(function(short) { %>
                  <tr>
                    <td><%= short.id %></td>
                    <td><%= short.code %></td>
                    <td><%= short.description %></td>
                    <td><%= short.status === 1 ? 'Active' : 'Inactive' %></td>
                    <td>
                      <a href="/setting/edit-short?id=<%= short.id %>" class="btn btn-sm btn-warning">Edit</a>
                      <a href="/setting/delete-short?id=<%= short.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this code?')">Delete</a>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr><td colspan="5" class="text-center">No short codes found.</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#dataTable').DataTable();
    });
  </script>
</body>
</html>
