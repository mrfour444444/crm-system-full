<div class="container-fluid px-4">
  <h4 class="my-4">Customer Win / Lose</h4>

  <form method="GET" action="/customer/win-lose" class="row g-3 mb-4">
    <div class="col-md-4">
      <label for="customer_id" class="form-label">Customer ID</label>
      <input type="text" class="form-control" id="customer_id" name="customer_id" placeholder="Enter Customer ID">
    </div>
    <div class="col-md-4">
      <label for="date" class="form-label">Date</label>
      <input type="date" class="form-control" id="date" name="date">
    </div>
    <div class="col-md-4 d-flex align-items-end">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <div class="table-responsive">
    <table class="table table-bordered table-hover" id="dataTable">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Customer Name</th>
          <th>Game Platform</th>
          <th>Win Amount</th>
          <th>Lose Amount</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% if (Array.isArray(results) && results.length > 0) { %>
          <% results.forEach(function(row) { %>
            <tr>
              <td><%= row.id %></td>
              <td><%= row.customer_name %></td>
              <td><%= row.platform %></td>
              <td><%= row.win_amount %></td>
              <td><%= row.lose_amount %></td>
              <td><%= row.date %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="6" class="text-center">No records found.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('#dataTable').DataTable();
  });
</script>
