<div class="container-fluid px-4">
  <h4 class="mt-4">Edit Source</h4>

  <form action="/customer/source/edit/<%= source.id %>" method="POST">
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="name" class="form-label">Source Name</label>
        <input type="text" name="name" class="form-control" id="name" value="<%= source.name %>" required>
      </div>
      <div class="col-md-6">
        <label for="status" class="form-label">Status</label>
        <select name="status" class="form-select" id="status" required>
          <option value="Active" <%= source.status === 'Active' ? 'selected' : '' %>>Active</option>
          <option value="Inactive" <%= source.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
        </select>
      </div>
    </div>

    <div class="mb-3">
      <label for="remark" class="form-label">Remark</label>
      <textarea name="remark" class="form-control" id="remark" rows="3"><%= source.remark %></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/customer/source/manage" class="btn btn-secondary">Back</a>
  </form>
</div>
