<% res.locals.page = 'add-game-account'; %>

<div class="main-content">
  <div class="page-header">
    <h1>Add Game Account</h1>
  </div>

  <form method="POST" action="/game/add">
    <div class="form-grid">
      <div class="form-group">
        <label for="platform">Game Platform</label>
        <input type="text" name="platform" id="platform" required>
      </div>

      <div class="form-group">
        <label for="player_name">Player Name</label>
        <input type="text" name="player_name" id="player_name" required>
      </div>

      <div class="form-group">
        <label for="game_id">Game ID</label>
        <input type="text" name="game_id" id="game_id" required>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="text" name="password" id="password" required>
      </div>

      <div class="form-group">
        <label for="credit">Credit</label>
        <input type="number" name="credit" id="credit" step="0.01" required>
      </div>

      <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" required>
          <option value="1">Active</option>
          <option value="0">Pending</option>
        </select>
      </div>

      <div class="form-group full-width">
        <label for="remark">Remark</label>
        <textarea name="remark" id="remark" rows="2"></textarea>
      </div>

      <div class="form-group full-width">
        <button type="submit" class="btn-submit">Create</button>
      </div>
    </div>
  </form>
</div>
